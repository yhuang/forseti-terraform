{
  "variables": {
    "box_basename": "forseti",
    "ssh_username": "vagrant",
    "ssh_password": "vagrant",
    "build_timestamp": "{{isotime \"20060102-1504\"}}",
    "user_home_dir": "/home/vagrant",
    "forseti_version": "2.2.0"
  },
  "builders": [
    {
      "type": "googlecompute",
      "machine_type": "f1-micro",
      "disk_size": "8",
      "disk_type": "pd-standard",
      "project_id": "{{user `project_id`}}",
      "source_image": "{{user `source_image`}}",
      "image_name": "true-prod-base-centos7-v{{isotime \"20060102-1504\"}}",
      "zone": "{{user `zone`}}",
      "ssh_username": "centos",
      "ssh_pty": true,
      "network": "{{user `network`}}",
      "network_project_id": "{{user `network_project_id`}}",
      "subnetwork": "{{user `subnetwork`}}",
      "omit_external_ip": true,
      "use_internal_ip": true,
      "tags": [
        "{{user `instance_tag`}}",
        "{{user `network_tag`}}"
      ],
      "image_labels": {
        "owner": "{{user `owner`}}",
        "metadata": "{{user `metadata`}}",
      },
      "labels": {
        "owner": "{{user `owner`}}",
        "metadata": "{{user `metadata`}}",
      }
    },
    {
      "type": "vmware-vmx",
      "vm_name": "{{ user `box_basename` }}",
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/{{user `ks_path`}}<enter><wait>"
      ],
      "boot_wait": "10s",
      "headless": true,
      "http_directory": ".",
      "source_path": "builds/centos7/centos7.vmx",
      "output_directory": "builds/{{ user `box_basename` }}",
      "shutdown_command": "echo {{user `ssh_password`}} | sudo -S /sbin/halt -h -p",
      "ssh_username": "{{user `ssh_username`}}",
      "ssh_password": "{{user `ssh_password`}}",
      "ssh_port": 22,
      "ssh_wait_timeout": "1800s",
      "vmx_data": {
        "cpuid.coresPerSocket": 1,
        "memsize": 1024,
        "numvcpus": 1
      }
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "expect_disconnect": true,
      "pause_before": "10s",
      "execute_command": "echo {{user `ssh_password`}} | {{.Vars}} sudo -S -E sh -eux '{{.Path}}'",
      "inline": [
        "yum -y update",
        "reboot"
      ]
    },
    {
      "type": "shell",
      "expect_disconnect": true,
      "execute_command": "echo {{user `ssh_password`}} | {{.Vars}} sudo -S -E sh -eux '{{.Path}}'",
      "inline": [ "sleep 60" ]
    },
    {
      "type": "file",
      "source": "files/requirements.txt",
      "destination": "/tmp/requirements.txt"
    },
    {
      "type": "shell",
      "environment_vars": [
        "FORSETI_VERSION={{user `forseti_version`}}"
      ],
      "execute_command": "echo {{user `ssh_password`}} | {{.Vars}} sudo -S -E sh -eux '{{.Path}}'",
      "scripts": [
        "provisioning-scripts/install-forseti-dependencies.sh",
        "provisioning-scripts/install-git.sh",
        "provisioning-scripts/install-google-cloud-sdk.sh",
        "provisioning-scripts/install-forseti.sh",
        "provisioning-scripts/clean-up.sh"
      ]
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "output": "{{user `box_basename`}}.{{.Provider}}.box"
    }
  ]
}
